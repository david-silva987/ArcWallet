<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArcWallet.AjouterMouvement"
             Title="Ajouter un mouvement">
    <StackLayout Margin="20,35,20,20">
        
        <Label>Type de mouvement</Label>
        <Picker x:Name="mouvementEntry" 
                Title="Selectionner une catégorie" 
                TitleColor="green">
            <Picker.Items>
                <x:String>Dépense</x:String>
                <x:String>Revenu</x:String>
            </Picker.Items>
        </Picker>
        
        <Label>Nom</Label>
        <Entry x:Name="nameEntry"
               Placeholder="Saisissez le nom" />

        <Label IsVisible="False">Type de revenu</Label>
        <Picker IsVisible="False" x:Name="categoryEntry" 
                Title="Selectionner une catégorie" 
                TitleColor="green">
            <Picker.Items>
                <x:String>Permanent</x:String>
                <x:String>Unique</x:String>
            </Picker.Items>
        </Picker>

        <Label>Date</Label>
        <DatePicker x:Name="dateEntry"/>

        <Label>Montant</Label>
        <Entry Keyboard="Numeric" x:Name="AmoutEntry"
               Placeholder="Le montant du revenu" />

        <Button Text="Ajouter le mouvement"
                Clicked="addMouvementButton" />

       

    </StackLayout>

</ContentPage>